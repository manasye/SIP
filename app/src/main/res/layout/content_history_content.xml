<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HistoryContent"
    tools:showIn="@layout/activity_history_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/date"
            android:text="Date"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="@drawable/separator_line"
            android:layout_below="@id/date"
            android:id="@+id/line_date"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/date_content"
            android:layout_below="@id/line_date"
            android:textSize="15sp"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/step_count"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/target_content"
            android:text="Step Count"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@drawable/separator_line"
        android:layout_below="@id/step_count"
        android:id="@+id/line_step_count"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/step_count_content"
            android:layout_below="@id/line_step_count"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/target"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/date_content"
            android:text="Target"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="@drawable/separator_line"
            android:layout_below="@id/target"
            android:id="@+id/line_target"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/target_content"
            android:layout_below="@id/line_target"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <View
            android:layout_marginTop="50dp"
            android:id="@+id/view_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/step_count_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/target_condition"
            android:layout_below="@id/view_icon"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/calories_content"
            android:layout_below="@id/target_condition"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="4dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>